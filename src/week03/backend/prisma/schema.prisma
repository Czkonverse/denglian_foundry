datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Transfer {
  id        Int      @id @default(autoincrement())
  from      String
  to        String
  amount    String
  tokenAddress String
  txHash    String   @unique
  blockNumber Int
  timestamp DateTime
  createdAt DateTime @default(now())

  @@index([from])
  @@index([to])
  @@index([tokenAddress])
} 